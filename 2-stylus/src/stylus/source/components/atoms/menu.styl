// Menu
.menu
  --menu-link-border: var(--border-style-0) var(--border-size-1);
  --menu-icon-border-color-d: var(--border-color-6);
  --menu-icon-border-color-h: var(--border-color-5);
  --menu-icon-border-color: var(--menu-icon-border-color-d);
  --menu-icon-size: 16px;
  // Rules
  border-left: var(--border-style-0) var(--border-size-0) var(--border-color-0);
  display: inline-block
  :hover
    --menu-icon-border-color: var(--menu-icon-border-color-h);
  > a
    align-items: center;
    display: inline-flex;
    font-size: 0;
    height: 62px;
    justify-content: center;
    position: relative;
    width: 76px
    &::before,
    &::after
      content: "";
      display: inline-block;
      width: var(--menu-icon-size);
      border-top: var(--menu-link-border);
      border-color: var(--menu-icon-border-color);
      transition: border-color var(--transition-0);
    &::before
      border-bottom: var(--menu-link-border);
      padding-top: calc(var(--border-size-1) * 3);
      border-color: var(--menu-icon-border-color);
    &::after
      position: absolute;
